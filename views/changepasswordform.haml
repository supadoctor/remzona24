#changepass.uk-modal
  .uk-modal-dialog.uk-modal-dialog-slide
    %a.uk-modal-close.uk-close
    %h1.uk-text-center Изменение пароля
      %form.uk-form.uk-form-horizontal{:action => "/changepassword"}
        %fieldset
          .uk-form-row
            %label.uk-form-label Текущий пароль
            %input#oldpass.uk-width-1-1{:type=>"password", :required=>"", :name=>"oldpass"}
          .uk-form-row
            %label.uk-form-label Новый пароль
            %input#newpass1.uk-width-1-1{:type=>"password", :required=>"", :name=>"newpass1"}
          .uk-form-row
            %label.uk-form-label Повторите новый пароль
            %input#newpass2.uk-width-1-1{:type=>"password", :required=>"", :name=>"newpass2"}
          .uk-width-1-3.uk-text-center.uk-push-1-3
            %button#editprofile.uk-button.uk-button-primary{:type=>"submit"} Изменить пароль